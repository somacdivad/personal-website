---
interface Props {
  greeting: string;
  figure: { src: string; alt: string };
  links?: { text: string; href: string; variant?: string }[];
}

const { greeting, figure, links } = Astro.props;
---

<div class="hero bg-base-300 max-h-lg">
  <div class="hero-content flex-col lg:flex-row-reverse">
    <img
      src={figure.src}
      alt={figure.alt}
      class="w-60 mask mask-squircle shadow-xl"
    />
    <div class="flex flex-col items-center lg:items-start">
      <h1 class="text-5xl font-bold mt-4">{greeting}</h1>
      <p class="py-6 mr-4 ml-4 text-center lg:text-left lg:ml-1">
        <slot />
      </p>
      {links?.length ? (
        <div class="btn-group">
          {links.map((link) => (
            <a href={link.href} class={`btn btn-${link.variant || 'secondary'}`}>
              {link.text}
            </a>
          ))}
        </div>
      ) : null}
    </div>
  </div>
</div>